{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "sourceMap": true,
    "noImplicitAny": false,
    "moduleDetection": "force"
  },
  "include": ["**/*.ts", "server.js"],
  "exclude": ["node_modules"]
}
